generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Task {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  content   String
  authorId  String
  assignedTo String? //TODO: figure out a way to make it a String[]

  Column   Column @relation(fields: [columnId], references: [id])
  columnId String

  Comments Comment[]

  @@index([columnId])
}

model Column {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  name      String
  
  Board Board @relation(fields:[boardId],references:[id])
  boardId String

  tasks Task[]

  @@index([boardId])
}

model Comment {
  id        String    @id @default(cuid())
  authorId  String
  createdAt DateTime  @default(now())
  editedAt  DateTime?
  content String

  Task   Task   @relation(fields: [taskId], references: [id])
  taskId String

  @@index([taskId])
}

model Board {
  id      String   @id @default(cuid())
  createdAt DateTime  @default(now())
  name String
  
  columns Column[]
  members String //TODO: find a way to store scalar[]

}
